<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Users</title>
</head>

<body>
    <div class="container">
        <h1>User List</h1>
        <form action="/search" method="post">
            <input type="text" name="searchData" placeholder="Search users...">
            <button type="submit">Search</button>
        </form>
        <a href="/">Refresh search</a>
        <a href="/new">Add New User</a>
        <div class="user-cards">
            <% users.forEach(user=> { %>
                <div class="user-card">
                    <% if (user.avatar) { %>
                        <img src="data:image/jpeg;base64,<%= user.avatar.toString('base64') %>"
                            alt="<%= user.name %> Avatar">
                        <% } else { %>
                            <p>No Avatar</p>
                            <% } %>
                                <h2>
                                    <%= user.name %>
                                </h2>
                                <p>Phone: <%= user.phone %>
                                </p>
                                <p>Username: <%= user.username %>
                                </p>
                                <p>Email: <%= user.email %>
                                </p>
                                <a href="/edit/<%= user._id %>">Edit</a>
                                <form action="/delete/<%= user._id %>" method="post">
                                    <button type="submit">Delete</button>
                                </form>
                </div>
                <% }) %>
        </div>
    </div>
</body>

